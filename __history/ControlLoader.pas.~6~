unit ControlLoader;

interface

uses
  SysUtils, Classes, Forms, UNit4, uLkJSON, AppController, Graphics, Windows,
  StdCtrls, ExtCtrls, Messages, Dialogs, Controls;

type
  TControlLoader = class
  private
    FControls: TlkJSONobject;
    FController: TAppController;
  public
    constructor Create(Json: TlkJSONobject);
    destructor Destroy; override;
    procedure BuildScreen(AParent: TWinControl; const AScreenName: string);
  end;

implementation

constructor TControlLoader.Create(Json: TlkJSONobject);
begin
  FControls := Json;
end;

destructor TControlLoader.Destroy;
begin
  inherited;
end;

end.
