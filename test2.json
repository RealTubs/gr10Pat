{
  "$schema": "./schema.json",
  "screens": {
    "HomeScreen": {
      "controls": [
        {
          "name": "lblHomeTitle",
          "type": "ctLabel",
          "properties": {
            "caption": "Welcome to Testify App!",
            "top": 50,
            "left": 50,
            "width": 300,
            "height": 20,
            "font": {
              "color": "#0000FF"
            }
          }
        },
        {
          "name": "btnGoDetails",
          "type": "ctButton",
          "properties": {
            "caption": "Go to Details",
            "top": 100,
            "left": 50,
            "width": 150,
            "height": 30
          },
          "action": "OnDetailsClick"
        },
        {
          "name": "btnGoSettings",
          "type": "ctButton",
          "properties": {
            "caption": "Settings",
            "top": 150,
            "left": 50,
            "width": 150,
            "height": 30
          },
          "action": "OnSettingsClick"
        }
      ],
      "handlers": [
        {
          "trigger": "OnDetailsClick",
          "conditions": [],
          "execute": [
            {
              "type": "navigate",
              "params": {
                "screen": "DetailScreen"
              }
            }
          ]
        },
        {
          "trigger": "OnSettingsClick",
          "conditions": [],
          "execute": [
            {
              "type": "navigate",
              "params": {
                "screen": "SettingsScreen"
              }
            }
          ]
        }
      ],
      "events": {
        "onLoad": {
          "execute": []
        }
      },
      "canvas": {
        "enabled": true,
        "initObjects": [
          {
            "id": "grass",
            "type": "rectangle",
            "color": "#00FF00",
            "position": {"x": 0, "y": 150},
            "size": {"width": 800, "height": 200}
          },
           {
            "id": "sky",
            "type": "rectangle",
            "color": "#000FF",
            "position": {"x": 0, "y": 0},
            "size": {"width": 800, "height": 150}
          }
        ]
      }
    },
    "DetailScreen": {
      "controls": [
        {
          "name": "lblDetailTitle",
          "type": "ctLabel",
          "properties": {
            "caption": "Product Details",
            "top": 50,
            "left": 50,
            "width": 300,
            "height": 20,
            "font": {
              "color": "#FF0000"
            }
          }
        },
        {
          "name": "btnBackHome",
          "type": "ctButton",
          "properties": {
            "caption": "Back to Home",
            "top": 100,
            "left": 50,
            "width": 150,
            "height": 30
          },
          "action": "OnBackHomeClick"
        }
      ],
      "handlers": [
        {
          "trigger": "OnBackHomeClick",
          "conditions": [],
          "execute": [
            {
              "type": "navigate",
              "params": {
                "screen": "HomeScreen"
              }
            }
          ]
        }
      ],
      "events": {
        "onLoad": {
          "execute": []
        }
      },
      "canvas": {
        "enabled": true,
        "initObjects": []
      }
    },
    "SettingsScreen": {
      "controls": [
        {
          "name": "lblSettingsTitle",
          "type": "ctLabel",
          "properties": {
            "caption": "Application Settings",
            "top": 50,
            "left": 50,
            "width": 300,
            "height": 20,
            "font": {
              "color": "#008000"
            }
          }
        },
        {
          "name": "btnConfirm",
          "type": "ctButton",
          "properties": {
            "caption": "Save and Confirm",
            "top": 100,
            "left": 50,
            "width": 150,
            "height": 30
          },
          "action": "OnConfirmClick"
        }
      ],
      "handlers": [
        {
          "trigger": "OnConfirmClick",
          "conditions": [],
          "execute": [
            {
              "type": "navigate",
              "params": {
                "screen": "ConfirmationScreen"
              }
            }
          ]
        }
      ],
      "events": {
        "onLoad": {
          "execute": []
        }
      },
      "canvas": {
        "enabled": true,
        "initObjects": []
      }
    },
    "ConfirmationScreen": {
      "controls": [
        {
          "name": "lblConfirmation",
          "type": "ctLabel",
          "properties": {
            "caption": "Settings Saved Successfully!",
            "top": 50,
            "left": 50,
            "width": 300,
            "height": 20,
            "font": {
              "color": "#800080"
            }
          }
        },
        {
          "name": "btnReturnHome",
          "type": "ctButton",
          "properties": {
            "caption": "Return to Home",
            "top": 100,
            "left": 50,
            "width": 150,
            "height": 30
          },
          "action": "OnReturnHome"
        }
      ],
      "handlers": [
        {
          "trigger": "OnReturnHome",
          "conditions": [],
          "execute": [
            {
              "type": "navigate",
              "params": {
                "screen": "HomeScreen"
              }
            }
          ]
        }
      ],
      "events": {
        "onLoad": {
          "execute": []
        }
      },
      "canvas": {
        "enabled": true,
        "initObjects": []
      }
    }
  }
}